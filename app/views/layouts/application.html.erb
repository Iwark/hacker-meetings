<!DOCTYPE html>
<html>
<head>
  <title>HackerMeetings</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
</head>
<body>
  <!-- Header -->
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="navbar-header">
      <div class="navbar-left">
        <a href="#" class="btn btn-default menu-button">≡</a>
        <div class="header-icon">
        </div>
        <div class="brand">
          <%= link_to 'Hacker-Meetings',root_path, class:"nav navbar-brand" %>
        </div>
      </div>
      <% if user_signed_in? %>
        <div class="navbar-right">
          <div class="link-new-meeting">
            <div class="plus-new-meeting">
              +
            </div>
            <div class="text-new-meeting">
              <%= link_to '新規イベント作成', new_meeting_path %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </nav>

  <div id="wrapper">

    <!-- Sidebar -->
    <div class="sidebar">
      <ul class="sidebar-nav">
        <li class="nav-item-active">
          <a href="#">Event</a>
        </li>
        <li>
          <a href="#">Calendar</a>
        </li>
        <li><a href="#">Myイベント</a>
        </li>
        <li><a href="#">Member</a>
        </li>
        <li><a href="#">Account</a>
        </li>
      </ul>
    </div>
    <!-- main -->
    <div class="main">
      <div class="main_contents">
        <div class="container">
          <%# ここに各ページの実際のコンテンツが入ってくる %>
          <%= yield %>
        </div>
      </div>
    </div>

  </div>

</body>
</html>
