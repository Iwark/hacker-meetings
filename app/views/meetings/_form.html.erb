<%= form_for(@meeting) do |f| %>
	<% if @meeting.errors.any? %>
		<div id="error_explanation">
			<h2>Error</h2>
			<ul>
			<% @meeting.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :title, 'タイトル', class:"control-label" %>
		<%= f.text_field :title, class:"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :body, '内容', class:"control-label" %>
		<%= f.text_area :body, class:"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :image, '画像', class:"control-label" %>
		<%= f.file_field :image, class:"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :start_date, '日時', class:"control-label" %>
		<%= f.datetime_select :start_date, class:"form-control" %> - <%= f.time_select :end_date, class:"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :capacity, '定員', class:"control-label" %>
		<%= f.text_field :capacity, class:"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :place, '会場名', class:"control-label" %>
		<%= f.text_field :place, class:"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :place_info, '会場の情報', class:"control-label" %>
		<%= f.text_field :place_info, class:"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :url, 'URL', class:"control-label" %>
		<%= f.text_field :url, class:"form-control" %>
	</div>

	<div class="form-group">
    <%= f.submit '作成', class:"btn btn-primary" %>
  </div>

<% end %>
